<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp" tools:ignore="MissingClass">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


        <LinearLayout
                android:layout_width="344dp"
                android:layout_height="119dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/nombreDeProductoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="nombre_de_producto" />

            <TextView
                    android:id="@+id/cantidadTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="cantidad_de_producto" />

            <TextView
                    android:id="@+id/UnidadDeCantidadTextVIew"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="unidad_de_cantidad" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
